doctype html
= render :partial => 'layouts/header'
body.animsition[style="background-image: url(image_tag('/icons/pattern2.png')"]
  section.section-welcome.bg1-pattern.p-t-120.p-b-105[style="background-image: url(image_tag('/icons/pattern2.png')"]
    .container
      .row
        .col-md-6.p-t-45.p-b-30
          .wrap-text-welcome.t-center
            h3.tit3.t-center.m-b-35.m-t-5
              |  Update Profile
            = form_for(@member, url: member_path(@member), html: {class: "wrap-form-booking"}) do |f|
              .size30.bo2.bo-rad-10.m-t-3.m-b-30
                = f.text_field :name, class: "bo-rad-10 sizefull txt10 p-l-20", placeholder: "name..."
              .size30.bo2.bo-rad-10.m-t-3.m-b-30
                = f.text_field :email, class: "bo-rad-10 sizefull txt10 p-l-20", placeholder: "email"
              = f.text_area :text, class: "bo-rad-10 size29 bo2 txt10 p-l-20 p-t-15 m-b-10 m-t-40"
              .input-group
                span.input-group-btn
                  span.btn3.flex-c-m.size31.txt11.trans-0-4[onclick="$(this).parent().find('input[type=file]').click();"]
                    | Image upload
                  = f.file_field :image_url, onchange: "$(this).parent().parent().find('.form-control').html($(this).val().split(/[\\\\|/]/).pop());", style: "display: none;"
                span.form-control
              br
              = f.submit "Update", class: "btn3 flex-c-m size31 txt11 trans-0-4"
        .col-md-6.p-b-30
          .wrap-pic-welcome.size2.bo-rad-10.hov-img-zoom.m-l-r-auto
            - if @member.image_url.present?
              = image_tag(@member.image_url)
            - else
              = image_tag("default.png")
= render partial: 'layouts/footer'
